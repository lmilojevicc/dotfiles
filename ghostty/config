# Font
font-family = "Maple Mono NF"
font-family = "Consolas For Powerline"
font-family = "Sometype Mono"
font-family = "Fragment Mono"
font-family = "Symbols Nerd Font"
font-size = 16
font-feature = -calt,-liga,-dlig

# Color scheme
theme = catppuccin-noir
window-padding-x = 10
window-padding-y = 5 
window-padding-balance = true
split-divider-color = #313244
mouse-hide-while-typing = true

# Cursor settings
cursor-style = bar
cursor-style-blink = true

# Keybinds
macos-option-as-alt=true

# Reload config
keybind = shift+alt+r=reload_config

# Pane Splitting
keybind = shift+alt+h=new_split:down
keybind = shift+alt+v=new_split:right

# Pane Navigation
keybind = shift+alt+left=goto_split:left
keybind = shift+alt+right=goto_split:right
keybind = shift+alt+up=goto_split:up
keybind = shift+alt+down=goto_split:down

# Change pane sizes
keybind = shift+cmd+alt+left=resize_split:left,25
keybind = shift+cmd+alt+right=resize_split:right,25
keybind = shift+cmd+alt+up=resize_split:up,25
keybind = shift+cmd+alt+down=resize_split:down,25

keybind = shift+alt+e=equalize_splits

# Toggle pane zoom state
keybind = shift+alt+z=toggle_split_zoom

# Close current pane (no direct equivalent, but close_surface is similar)
keybind = shift+alt+x=close_surface
