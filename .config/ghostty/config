# Font
font-family = "Maple Mono NF"
font-size = 16
font-feature = -calt,-liga,-dlig

# Color scheme
theme = catppuccin-noir
window-padding-x = 5
window-padding-y = 5 
window-padding-balance = true
mouse-hide-while-typing = true

# Cursor settings
cursor-style = bar
cursor-style-blink = true

# Keybinds
macos-option-as-alt=true

# Reload config
keybind = alt+g>r=reload_config

# Pane Splitting & Management
keybind = alt+g>v=new_split:right
keybind = alt+g>h=new_split:down
keybind = alt+g>x=close_surface
keybind = alt+g>z=toggle_split_zoom
keybind = alt+g>e=equalize_splits

# Pane Navigation (Arrow keys)
keybind = alt+g>left=goto_split:left
keybind = alt+g>right=goto_split:right
keybind = alt+g>up=goto_split:up
keybind = alt+g>down=goto_split:down

# Pane Resizing (Arrow keys)
keybind = alt+g>shift+left=resize_split:left,10
keybind = alt+g>shift+right=resize_split:right,10
keybind = alt+g>shift+up=resize_split:up,5
keybind = alt+g>shift+down=resize_split:down,5
