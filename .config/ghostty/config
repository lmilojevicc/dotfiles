# Font
# font-family = "CommitMonoCode"
font-family = "Maple Mono NF"
font-size = 16
font-feature = -calt,-liga,-dlig

# Color scheme
theme = catppuccin-mocha
background = #11111b
foreground = #cdd6f4
selection-background = #45475a
selection-foreground = #cdd6f4
split-divider-color = #313244
cursor-color = #b4befe
cursor-invert-fg-bg = true

# Window
window-padding-x = 5
window-padding-y = 5 
window-padding-balance = true

# Cursor settings
cursor-style = bar
cursor-style-blink = true
mouse-hide-while-typing = true

# Keybinds
macos-option-as-alt=true

# Reload config
keybind = ctrl+f2>r=reload_config

# Pane Splitting & Management
keybind = ctrl+f2>w>v=new_split:right
keybind = ctrl+f2>w>h=new_split:down
keybind = ctrl+f2>w>x=close_surface
keybind = ctrl+f2>w>z=toggle_split_zoom
keybind = ctrl+f2>w>e=equalize_splits

# Pane Navigation (Arrow keys)
keybind = ctrl+f2>h=goto_split:left
keybind = ctrl+f2>l=goto_split:right
keybind = ctrl+f2>k=goto_split:up
keybind = ctrl+f2>j=goto_split:down

# Pane Resizing (Arrow keys)
keybind = ctrl+f2>s>h=resize_split:left,50
keybind = ctrl+f2>s>l=resize_split:right,50
keybind = ctrl+f2>s>k=resize_split:up,50
keybind = ctrl+f2>s>j=resize_split:down,50
